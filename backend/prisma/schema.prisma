generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                     Int     @id @default(autoincrement())
  nombre                 String  @unique
  dinero                 Decimal @default(0)
  personaje_seleccionado String

  Personajes_desbloqueados Personajes_desbloqueados[]
}

model Personaje {
  id     Int     @id @default(autoincrement())
  nombre String  @unique
  ki     Int
  precio Decimal

  Personajes_desbloqueados Personajes_desbloqueados[]
}

model Personajes_desbloqueados {
  usuario Usuario @relation(fields: [id_usuario], references: [id])
  id_usuario Int 

  personaje Personaje @relation(fields: [id_personaje], references: [id])
  id_personaje Int

  @@unique([id_usuario, id_personaje])
}
